<h1 class="text-center mt-3 mb-3">Login</h1>

<%= form_tag '/login', class: 'd-flex flex-column align-items-center' do %>
  <div class="form-group">
    <label for="email">Email address</label>
    <%= text_field_tag :email, nil, class: 'form-control my-2', placeholder: 'Enter your email', style: "width: 300px;" %>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <%= password_field_tag :password, nil, class: 'form-control my-2', placeholder: 'Enter your password', style: "width: 300px;" %>
  </div>
  <%= submit_tag "Submit", class: 'btn btn-primary mt-2' %>
<% end %>